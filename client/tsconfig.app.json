{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",

        "target": "ES2022",
        "lib": [ "ES2022", "DOM", "DOM.Iterable" ],
        "module": "ESNext",

        "moduleResolution": "bundler",

        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "types": [ "react", "react-dom" ],

        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [ "src" ]
}
